
@model IEnumerable<WebApplication433.Models.Todo>
@{
    ViewBag.Title = "Index";
}

<div style="font-size: 150%; text-align: center">

    <h2>Everything</h2>

    @for (int i = 0; i < Model.Count(); i++)
    {
        if (Model.ElementAt(i).Done)
        {
            <div><s>@Html.ActionLink(Model.ElementAt(i).Description, "Details", new { id = Model.ElementAt(i).TodoId })</s> | @Html.ActionLink("done?", "Done", new { id = Model.ElementAt(i).TodoId })</div>
            <hr />
        }
        else
        {
            <div>@Html.ActionLink(Model.ElementAt(i).Description, "Details", new { id = Model.ElementAt(i).TodoId }) | @Html.ActionLink("done?", "Done", new { id = Model.ElementAt(i).TodoId })</div>
            <hr />
        }
    }

    @if (Model.Count() == 0)
    {
        <p>Click "Create" to add a ToDo.</p>
    }
</div>



@model IEnumerable<WebApplication433.Models.Todo>
@{
    ViewBag.Title = "Completed";
}
<div style="font-size: 150%; text-align: center">

    <h2>Completed</h2>

    @for (int i = 0; i < Model.Count(); i++)
    {
        if (Model.ElementAt(i).Done)
        {
            <p><s>@Html.ActionLink(Model.ElementAt(i).Description, "Details", new { id = Model.ElementAt(i).TodoId })</s> | @Html.ActionLink("done?", "Done", new { id = Model.ElementAt(i).TodoId })</p><hr />

        }
    }
</div>